      "min_username_length": 3,
      "allowed_characters": "a-zA-Z0-9_@.-",
      "spam_protection": true
    },
    
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256-GCM",
      "key_rotation_days": 30
    }
  },
  
  "database": {
    "type": "sqlite",
    "path": "data/database.db",
    
    "backup": {
      "enabled": true,
      "interval_hours": 6,
      "keep_days": 7,
      "compress": true
    },
    
    "optimization": {
      "vacuum_daily": true,
      "cache_size_mb": 100,
      "journal_mode": "WAL"
    },
    
    "tables": {
      "users": "users",
      "files": "files",
      "downloads": "downloads",
      "payments": "payments",
      "subscriptions": "subscriptions",
      "logs": "logs"
    }
  },
  
  "logging": {
    "level": "INFO",
    "levels": {
      "telegram": "WARNING",
      "urllib3": "WARNING",
      "asyncio": "WARNING"
    },
    
    "handlers": {
      "file": {
        "enabled": true,
        "path": "logs/bot.log",
        "max_size_mb": 10,
        "backup_count": 5,
        "encoding": "utf-8"
      },
      
      "console": {
        "enabled": true,
        "format": "colored",
        "show_thread": false
      },
      
      "telegram": {
        "enabled": true,
        "chat_id": -1001234567890,
        "level": "ERROR"
      }
    },
    
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S"
  },
  
