      "enabled": true,
      "rate_limit_per_minute": 100,
      "require_auth": true,
      "cors_origins": ["*"],
      "docs_enabled": true
    },
    
    "monitoring": {
      "enabled": true,
      "metrics_port": 9090,
      "health_check_path": "/health",
      "prometheus_enabled": true
    }
  },
  
  "performance": {
    "thread_pool_size": 10,
    "download_buffer_size_kb": 8192,
    "max_memory_usage_mb": 512,
    "cache_ttl_seconds": 300,
    
    "optimization": {
      "connection_pooling": true,
      "query_caching": true,
      "lazy_loading": true
    }
  },
  
  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "location": "backups/",
    "encrypt": true,
    
    "retention": {
      "daily": 7,
      "weekly": 4,
      "monthly": 6
    },
    
    "items": [
      "database",
      "config",
      "logs",
      "user_files"
    ]
  },
  
  "maintenance": {
    "cleanup_interval_hours": 24,
    "temp_files_max_age_hours": 24,
